# PicoPics 环境变量配置
# 复制此文件为 .env.local 并填写实际值

# Next.js 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8787

# Cloudflare Workers 配置
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# R2 存储桶配置
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=lambdaimagebucket
R2_PUBLIC_URL=https://your-domain.com

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Cloudflare AI 配置
CF_AI_API_TOKEN=your_cf_ai_token

# 管理员配置（生产环境使用 wrangler secret）
ADMIN_USERS=github_username1,github_username2
ADMIN_TOKEN=your_secure_admin_token

# 上传配置
MAX_FILE_SIZE=10485760
DAILY_QUOTA_BYTES=104857600

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,https://*.pages.dev,https://*.lambdax.me

# 安全配置
ABUSE_DETECTION_ENABLED=true
CONTENT_MODERATION_ENABLED=true

# 数据库配置（如果使用 D1）
DATABASE_URL=your_database_url

# 缓存配置（如果使用 KV）
KV_NAMESPACE_ID=your_kv_namespace_id

# 开发环境配置
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1